<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.day.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.day.pojo.Order">
        <id column="order_id" property="orderId" />
        <result column="order_name" property="orderName" />
        <result column="pay_mode" property="payMode" />
        <result column="order_time" property="orderTime" />
        <result column="order_status" property="orderStatus" />
        <result column="remarks" property="remarks" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id, order_name, pay_mode, order_time, order_status, remarks, del_flag
    </sql>

</mapper>
